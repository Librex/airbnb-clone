<div class="row">
<div class="col-md-4 col-md-offset-4 text-center">

<h2>パスワードを変更する</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/devise_errors' %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control", placeholder:"新しいパスワードを入力してください。" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"新しいパスワードを再度入力してください。" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する" %>
  </div>
<% end %>

</div>
</div>