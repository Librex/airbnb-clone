<%= form_for([@room, @room.reservations.new]) do |f| %>     
  <div class="row">
    <div class="col-md-12 price_tag">
      <span><%= @room.price %>円</span>
      <span class="pull-right">１泊</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <label>到着</label>
      <%= f.text_field :start_date, readonly: 'true', placeholder: 'jj/mm/aaaa', class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label>出発</label>
      <%= f.text_field :end_date, readonly: 'true', placeholder: 'jj/mm/aaaa', class: 'form-control' %>
    </div>
  </div>

  <div id="preview" style="display: none">
    <table class="reservation-table" >
      <tbody>
        <tr>
          <td>泊数</td>
          <td><span id="reservation_days"></span></td>
        </tr>

        <tr>
          <td>Total</td>
          <td><span id="reservation_sum"></span>円</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :price, value: @room.price %>
  <%= f.hidden_field :total, id: 'reservation_total' %>
  <br>

  <%= f.submit "入力した内容で予約する", class: "btn btn-primary wide" %>
<% end %>

<script>
  $(function() {
    $('#reservation_start_date').datepicker({
      dateFormat: 'dd-mm-yy',
      monthNames: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
      dayNamesMin: ['日', '月', '火', '水', '木', '金', '土']                              
    });
    $('#reservation_end_date').datepicker({
      dateFormat: 'dd-mm-yy',
      monthNames: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
      dayNamesMin: ['日', '月', '火', '水', '木', '金', '土']                                                                             
    });
  });
</script>
