<%= form_for([@room, @room.reservations.new]) do |f| %>     
  <div class="row">
    <div class="col-md-12 price_tag">
      <span><%= @room.price %>円</span>
      <span class="pull-right">１泊</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <label>到着</label>
      <%= f.text_field :start_date, readonly: 'true', placeholder: 'jj/mm/aaaa', class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <label>出発</label>
      <%= f.text_field :end_date, readonly: 'true', placeholder: 'jj/mm/aaaa', class: 'form-control' %>
    </div>
  </div>

  <div id="preview" style="display: none">
    <table class="reservation-table" >
      <tbody>
        <tr>
          <td>泊数</td>
          <td><span id="reservation_days"></span></td>
        </tr>

        <tr>
          <td>Total</td>
          <td><span id="reservation_sum"></span>円</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :price, value: @room.price %>
  <%= f.hidden_field :total, id: 'reservation_total' %>
  <br>

  <%= f.submit "入力した内容で予約する", class: "btn btn-primary wide" %>
<% end %>

<script>
  function unavailable(date) {
    dmy = date.getDate() + "-" + (date.getMonth() + 1) + "-" + date.getFullYear();
    return [$.inArray(dmy, unavailableDates) == -1];
  }
  $(function(){
    unavailableDates = [];
    $.ajax({
      url: '/preload',
      data: {'room_id': <%= @room.id %>},
      dataType: 'json',
      success: function(data) {
        $.each(data, function(arrID, arrValue){
          for(var d = new Date(arrValue.start_date); d <= new Date(arrValue.end_date);
          d.setDate(d.getDate() +1)) {
            unavailableDates.push($.datepicker.formatDate('d-m-yy', d));
          }
        })

        $('#reservation_start_date').datepicker({
          dateFormat: 'dd-mm-yy',
          monthNames: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
          dayNamesMin: ['日', '月', '火', '水', '木', '金', '土'],
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: unavailable,
          onSelect: function(selected) {
            var newdate = new Date($("#reservation_start_date").datepicker("getDate"));
            newdate.setDate(newdate.getDate() + 1);
            $('#reservation_end_date').datepicker("option","minDate", newdate);
            $('#reservation_end_date').attr('disabled', false);

            var start_date = $(this).datepicker('getDate');
            var end_date = $('#reservation_end_date').datepicker('getDate');
            var diff = (end_date - start_date)/1000/60/60/24;
            var days = Math.round(diff);

            var input = {
              'start_date': start_date,
              'end_date': end_date,
              'room_id': <%= @room.id %>
            }

            $.ajax({
              url: '/preview',
              data: input,
              success: function(data) {
                if (data.conflict) {
                  $('#message').show();
                  $('#message').text("これらの日付は使用できません。");
                  $('#preview').hide();
                  $('#btn_book').attr('disabled', true);
                } else {
                  $('#message').hide();
                  $('#preview').show();
                  $('#btn_book').attr('disabled', false);

                  var total = days * <%= @room.price %>
                  $('#reservation_days').text(days);
                  $('#reservation_sum').text(total);
                  $('#reservation_total').val(total);
                }
              }
            });
          }
        });

        $('#reservation_end_date').datepicker({
          dateFormat: 'dd-mm-yy',
          monthNames: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
          dayNamesMin: ['日', '月', '火', '水', '木', '金', '土'],
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: unavailable,
          onSelect: function(selected) {
            $('#reservation_start_date').datepicker("option", "maxDate", selected);

            var start_date = $('#reservation_start_date').datepicker('getDate');
            var end_date = $(this).datepicker('getDate');
            var diff = (end_date - start_date)/1000/60/60/24;
            var days = Math.round(diff);

            var input = {
              'start_date': start_date,
              'end_date': end_date,
              'room_id': <%= @room.id %>
            }

            $.ajax({
              url: '/preview',
              data: input,
              success: function(data) {
                if (data.conflict) {
                  $('#message').show();
                  $('#message').text("これらの日付は使用できません。");
                  $('#preview').hide();
                  $('#btn_book').attr('disabled', true);
                } else {
                  $('#message').hide();
                  $('#preview').show();
                  $('#btn_book').attr('disabled', false);

                  var total = days * <%= @room.price %>
                    $('#reservation_days').text(days);
                    $('#reservation_sum').text(total);
                    $('#reservation_total').val(total);
                  }
                }
              });
            }
          });
        }
      });
    });
</script>
